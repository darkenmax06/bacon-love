---
export const prerender = false;

import Layout from '../../components/Layout.astro';
import es from '../../translations/es.js';

const languajes = ["es", "en"];
---

<Layout
  title="Admin Login - Bacon Love"
  description="Acceso administrativo"
  lang="es"
  {...es.menu}
  {...es.footer}
  languajes={languajes}
>
  <main class="login-page">
    <div class="login-container">
      <div class="login-card">
        <div class="login-header">
          <img src="/logo.png" alt="Bacon Love Logo" class="login-logo" />
          <h1>Panel Administrativo</h1>
          <p>Iniciar sesión</p>
        </div>

        <form id="loginForm" class="login-form">
          <div class="form-group">
            <label for="email">Correo electrónico</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="admin@baconlove.com"
            />
          </div>

          <div class="form-group">
            <label for="password">Contraseña</label>
            <input
              type="password"
              id="password"
              name="password"
              required
              placeholder="••••••••"
            />
          </div>

          <div id="loginMessage" class="login-message"></div>

          <button type="submit" class="login-btn">
            Iniciar sesión
          </button>
        </form>
      </div>
    </div>
  </main>
</Layout>

<script>
const form = document.getElementById('loginForm') as HTMLFormElement;
const messageDiv = document.getElementById('loginMessage') as HTMLDivElement;

form.addEventListener('submit', async (e) => {
  e.preventDefault();

  const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
  const originalText = submitBtn.textContent;
  submitBtn.disabled = true;
  submitBtn.textContent = 'Iniciando sesión...';

  const formData = new FormData(form);
  const data = {
    email: formData.get('email'),
    password: formData.get('password'),
  };

  try {
    const response = await fetch('/api/auth/login', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(data),
    });

    const result = await response.json();

    if (response.ok) {
      showMessage('Inicio de sesión exitoso. Redirigiendo...', 'success');

      // Redirigir al dashboard después de 1 segundo
      setTimeout(() => {
        window.location.href = '/admin/dashboard';
      }, 1000);
    } else {
      showMessage(result.error || 'Credenciales inválidas', 'error');
    }
  } catch (error) {
    console.error('Error:', error);
    showMessage('Error al iniciar sesión. Intenta nuevamente', 'error');
  } finally {
    submitBtn.disabled = false;
    submitBtn.textContent = originalText;
  }
});

function showMessage(message: string, type: 'success' | 'error') {
  messageDiv.textContent = message;
  messageDiv.className = `login-message ${type}`;
  messageDiv.style.display = 'block';
}
</script>

<style>
.login-page {
  width: 100%;
  min-height: calc(100dvh - 60px);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 64px 16px;
}

.login-container {
  width: 100%;
  max-width: 450px;
}

.login-card {
  background-color: var(--white-transparent);
  backdrop-filter: blur(10px);
  border-radius: 8px;
  padding: 48px;
  border: 1px solid rgba(243, 238, 238, 0.1);
}

.login-header {
  text-align: center;
  margin-bottom: 32px;
}

.login-logo {
  width: 120px;
  height: auto;
  margin-bottom: 24px;
}

.login-header h1 {
  font-family: "stella";
  font-size: clamp(1.8rem, 5vw, 2.2rem);
  color: var(--white);
  margin-bottom: 8px;
}

.login-header p {
  color: var(--white);
  opacity: 0.6;
  font-family: "jost";
  font-size: 1rem;
}

.login-form {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-group label {
  font-family: "jost";
  font-weight: 600;
  color: var(--white);
  font-size: 0.95rem;
}

.form-group input {
  padding: 14px;
  background-color: rgba(25, 24, 24, 0.6);
  border: 1px solid rgba(243, 238, 238, 0.2);
  border-radius: 8px;
  font-size: 1rem;
  font-family: "jost";
  color: var(--white);
  transition: border-color 0.3s, background-color 0.3s;
}

.form-group input::placeholder {
  color: rgba(243, 238, 238, 0.4);
}

.form-group input:focus {
  outline: none;
  border-color: var(--white);
  background-color: rgba(25, 24, 24, 0.8);
}

.login-message {
  padding: 14px;
  border-radius: 8px;
  display: none;
  text-align: center;
  font-family: "jost";
  font-weight: 500;
  font-size: 0.95rem;
}

.login-message.success {
  background-color: rgba(46, 125, 50, 0.2);
  color: #90ee90;
  border: 1px solid rgba(46, 125, 50, 0.4);
}

.login-message.error {
  background-color: rgba(211, 47, 47, 0.2);
  color: #ff6b6b;
  border: 1px solid rgba(211, 47, 47, 0.4);
}

.login-btn {
  padding: 16px 32px;
  background-color: var(--white);
  color: var(--black);
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  font-family: "jost";
  font-weight: 600;
  cursor: pointer;
  transition: transform 0.2s, opacity 0.3s;
  margin-top: 8px;
}

.login-btn:hover:not(:disabled) {
  transform: translateY(-2px);
  opacity: 0.9;
}

.login-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

@media (max-width: 576px) {
  .login-card {
    padding: 32px 24px;
  }

  .login-header h1 {
    font-size: 1.5rem;
  }

  .login-page {
    padding: 32px 16px;
  }
}
</style>

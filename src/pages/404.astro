---
import Layout from '../components/Layout.astro';
import es from '../translations/es.js';

const languajes = ["es", "en"];
---

<Layout
  title="404 - P치gina no encontrada | Bacon Love"
  description="La p치gina que buscas no existe."
  lang="es"
  {...es.menu}
  {...es.footer}
  languajes={languajes}
>
  <section class="not-found">
    <p class="error-code">404</p>
    <h1>P치gina no encontrada</h1>
    <p class="message">La p치gina que buscas no existe o ha sido movida. Vuelve al inicio o echa un vistazo a nuestra carta.</p>
    <div class="not-found__actions">
      <a href="/es/" class="back-btn">Volver al inicio</a>
      <a href="/es/carta" class="back-btn back-btn--secondary">Ver nuestra carta</a>
    </div>
  </section>
</Layout>

<style>
.not-found {
  width: 100%;
  min-height: calc(100dvh - 120px);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16px;
  padding: 64px 16px;
  text-align: center;
}

.error-code {
  font-family: "stella", serif;
  font-size: clamp(6rem, 20vw, 12rem);
  color: var(--white);
  opacity: 0.1;
  line-height: 1;
  margin: 0;
}

h1 {
  font-family: "stella", serif;
  font-size: clamp(2rem, 6vw, 3.5rem);
  color: var(--white);
  margin: 0;
}

.message {
  font-family: "jost", sans-serif;
  font-size: clamp(1rem, 3vw, 1.25rem);
  color: var(--white);
  opacity: 0.6;
  margin: 0;
}

.back-btn {
  padding: 14px 32px;
  background-color: var(--white);
  color: var(--black);
  border-radius: 8px;
  font-family: "jost", sans-serif;
  font-weight: 600;
  font-size: 1rem;
  text-decoration: none;
  transition: transform 0.2s, opacity 0.3s;
}

.back-btn--secondary {
  background-color: transparent;
  color: var(--white);
  border: 1px solid rgba(255,255,255,0.4);
}

.not-found__actions {
  display: flex;
  gap: 16px;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 16px;
}

.back-btn:hover {
  transform: translateY(-2px);
  opacity: 0.9;
}
</style>

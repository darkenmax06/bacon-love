---
import Layout from "../../components/Layout.astro"
import en from "../../translations/en"

const content = en
const languajes = ["es", "en"]

const links = {
  home: "/en",
  about: "/en/about",
  menu: "/en/menu",
  testimonials: "/en/about#testimonials",
  appointments: "/en/appointments",
  contact: "/en/contact"
}

const alternateLinks = {
  es: "/es/contacto",
  en: "/en/contact"
}

const schema = {
  "@context": "https://schema.org",
  "@type": "Restaurant",
  "name": "Bacon Love",
  "image": "https://baconlove.es/og.png",
  "url": "https://baconlove.es/es",
  "telephone": "+34677063060",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Calle de Sofía, 177i",
    "addressLocality": "San Blas-Canillejas",
    "postalCode": "28022",
    "addressCountry": "ES"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 40.4237379,
    "longitude": -3.6006177
  },
  "servesCuisine": [
    "Hamburguesería",
    "Parrilla y asados",
    "Bar & Grill",
    "Arroces",
    "Mariscos"
  ],
  "priceRange": "€€",
  "menu": "https://baconlove.es/es/carta",
  "hasMap": "https://maps.google.com/maps?q=Bacon+Love+Calle+de+Sofía+177i+Madrid",
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday","Tuesday","Wednesday","Thursday","Friday"],
      "opens": "07:30",
      "closes": "23:45"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Saturday"],
      "opens": "10:30",
      "closes": "23:00"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Sunday"],
      "opens": "10:00",
      "closes": "23:00"
    }
  ],
  "reservationUrl": "https://baconlove.es/es/citas",
  "currenciesAccepted": "EUR",
  "paymentAccepted": "Cash, Credit Card, Debit Card, NFC",
  "amenityFeature": [
    {"@type": "LocationFeatureSpecification", "name": "Free Parking", "value": true},
    {"@type": "LocationFeatureSpecification", "name": "Takeaway", "value": true},
    {"@type": "LocationFeatureSpecification", "name": "Delivery", "value": true},
    {"@type": "LocationFeatureSpecification", "name": "Wheelchair Accessible", "value": true}
  ]
}
---

<Layout 
  {...content.footer} 
  {...content.menu} 
  languajes={languajes}
  title="Contact | Bacon Love Burger Restaurant San Blas Madrid"
  description="Contact Bacon Love. Calle de Sofía 177i, San Blas-Canillejas, 28022 Madrid. Phone: +34 677 06 30 60."
  lang="en"
  links={links}
  alternateLinks={alternateLinks}
>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <main class="contact-page">
    <div class="container">
      <h1>Location & Contact</h1>
      
      <div class="contact-grid">
        <div class="contact-info">
          <h2>Information</h2>
          <p><strong>Address:</strong> <br/> C. de Sofía, 177i, San Blas-Canillejas, 28022 Madrid</p>
          <p><strong>Phone:</strong> <br/> <a href="tel:+34677063060">677 06 30 60</a></p>
          <p><strong>Email:</strong> <br/> <a href="mailto:hola@baconlove.es">hola@baconlove.es</a></p>
          
          <div class="hours">
            <h3>Hours</h3>
            <p>Monday - Friday: 07:30 - 23:45</p>
            <p>Saturday: 10:30 - 23:00</p>
            <p>Sunday: 10:00 - 23:00</p>
          </div>
        </div>

        <div class="map-container">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3036.5772477383066!2d-3.603192623966567!3d40.42373797143896!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd422f9ec6c35b8b%3A0x1c8b3f8f1a8e1b0!2sC.%20de%20Sof%C3%ADa%2C%20177%2C%20San%20Blas-Canillejas%2C%2028022%20Madrid!5e0!3m2!1ses!2ses!4v1709220000000!5m2!1ses!2ses" 
            width="100%" 
            height="450" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            title="Location Map of Bacon Love in Madrid">
          </iframe>
          
          <div class="location-details" style="margin-top: 20px; color: rgba(243, 238, 238, 0.8);">
            <h2 style="font-family: 'stella'; color: #ffd700; font-size: 1.5rem; margin-bottom: 10px;">How to Get Here</h2>
            <p style="font-family: 'jost'; line-height: 1.6;">
              We are located in the heart of Las Rosas, easily accessible for you to come and enjoy. 
              If you are coming from <strong>Moratalaz</strong>, <strong>Vicálvaro</strong>, or <strong>Coslada</strong>, you will arrive in just a few minutes by car or public transport. 
              We look forward to offering you the best Bar & Grill experience in the area!
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .contact-page {
    padding-top: 120px;
    padding-bottom: 60px;
    min-height: 80vh;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  h1 {
    color: #fff;
    font-size: 3rem;
    margin-bottom: 40px;
    text-align: center;
    font-family: 'stella', sans-serif;
  }
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    background: rgba(255, 255, 255, 0.05);
    padding: 40px;
    border-radius: 20px;
    backdrop-filter: blur(10px);
  }
  .contact-info {
    color: #fff;
    font-family: 'jost', sans-serif;
  }
  .contact-info h2 {
    font-family: 'stella', sans-serif;
    font-size: 2rem;
    margin-bottom: 20px;
    color: #ffd700;
  }
  .contact-info p {
    font-size: 1.1rem;
    margin-bottom: 20px;
    line-height: 1.6;
  }
  .contact-info a {
    color: #fff;
    text-decoration: underline;
  }
  .hours {
    margin-top: 30px;
    padding-top: 20px;
    border-top: 1px solid rgba(255,255,255,0.1);
  }
  .map-container iframe {
    border-radius: 10px;
    filter: invert(90%) hue-rotate(180deg);
  }
  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

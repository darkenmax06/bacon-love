---
import Layout from "../../components/Layout.astro"
import Hero from "../../components/Hero.astro"
import Orders from "../../components/Orders.astro"

import en from "../../translations/en"

const content = en
const languajes = ["es", "en"]

const links = {
  home: "/en",
  about: "/en/about",
  menu: "/en/menu",
  testimonials: "/en/about#testimonials",
  appointments: "/en/appointments",
  contact: "/en/contact"
}
const alternateLinks = {
  en: "/en",
  es: "/es"
};
---

<Layout 
  {...content.footer} 
  {...content.menu} 
  languajes={languajes} 
  title="Bacon Love | Burger Restaurant & Grill in San Blas-Canillejas, Madrid"
  description="Artisan burger restaurant and grill in San Blas-Canillejas, Madrid. Burgers, grilled meats, rice dishes and seafood. Free parking. Reservations available."
  lang="en"
  links={links}
  alternateLinks={alternateLinks}
>
  <Hero 
    {...content.hero}
    title1="Bacon Love"
    title2="Artisan Burger Restaurant & Grill in San Blas-Canillejas, Madrid"
    text1="At Bacon Love we specialise in artisan burgers, grilled meats, fresh rice dishes and seafood. Market kitchen under the supervision of chef Raúl Doñe. Free parking. Reservations available. Find us at Calle de Sofía 177i, Las Rosas, San Blas-Canillejas, 28022 Madrid."
    text2=""
    name=""
  />
  <Orders {...content.orders} />
</Layout>

---
import Layout from "../../components/Layout.astro"
import Platillos from "../../components/Platillos.astro"

import es from "../../translations/es"

const content = es
const languajes = ["es", "en"]

const links = {
  home: "/es",
  about: "/es/nosotros",
  menu: "/es/carta",
  testimonials: "/es/nosotros#testimonials",
  appointments: "/es/citas",
  contact: "/es/contacto"
}

const alternateLinks = {
  es: "/es/carta",
  en: "/en/menu"
}
---

<Layout 
  {...content.footer} 
  {...content.menu} 
  languajes={languajes}
  title="Carta y Menú | Bacon Love Hamburguesería San Blas-Canillejas Madrid"
  description="Descubre nuestra carta: hamburguesas artesanales, parrilla y asados, arroces frescos, mariscos, tapas y mucho más. Bacon Love, Calle de Sofía 177i, Madrid."
  lang="es"
  links={links}
  alternateLinks={alternateLinks}
>
  <div style="padding-top: 100px;">
    <h1 style="text-align: center; color: white; font-family: 'stella'; font-size: 3rem; margin-bottom: 2rem;">Nuestra Carta: Grill y Cocina Artesanal</h1>
    <Platillos {...content.platillos} title="" />
  </div>
</Layout>

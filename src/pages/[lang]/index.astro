---
export const prerender = true;

import About from "../../components/About.astro"
import Hero from "../../components/Hero.astro"
import Layout from "../../components/Layout.astro"
import Testimonials from "../../components/Testimonials.astro"
import Platillos from "../../components/Platillos.astro"
import Orders from "../../components/Orders.astro"


import es from "../../translations/es"
import en from "../../translations/en"

export function getStaticPaths (){
	return [{params: {lang: "es"}},{params: {lang: "en"}}]
}

export const defaultRedirect = "/es"

const lang = Astro.params.lang
const translations = {en,es}
const content = translations[lang]

const languajes = Object.keys(translations)

---

<Layout {...content.footer} {...content.menu} languajes={languajes} >
  <Hero {...content.hero} />
  <About {...content.about} />
  <Platillos {...content.platillos}  />
  <Orders {...content.orders} />
  <Testimonials testimonials={content.testimonials} />
</Layout>
<form id="settingsForm" class="settings-form">
  <h2>Configuracion del Sistema</h2>

  <div class="form-group">
    <label for="maxSeatsTotal">Capacidad Total (sillas)</label>
    <input type="number" id="maxSeatsTotal" name="maxSeatsTotal" required min="1">
  </div>

  <div class="form-group">
    <label for="maxSeatsPerReservation">Máximo por Reserva</label>
    <input type="number" id="maxSeatsPerReservation" name="maxSeatsPerReservation" required min="1">
  </div>

  <div class="form-group">
    <label for="reservationDuration">Duración Reserva (minutos)</label>
    <input type="number" id="reservationDuration" name="reservationDuration" required min="30">
  </div>

  <div class="form-group">
    <label for="advanceBookingDays">Días de Anticipación</label>
    <input type="number" id="advanceBookingDays" name="advanceBookingDays" required min="1">
  </div>

  <div class="form-group full-width">
    <label>Horarios por Día de la Semana</label>
    <div class="day-schedules-container" id="daySchedulesContainer">
      <!-- Day schedules will be dynamically generated here -->
    </div>
  </div>

  <div class="form-group full-width closed-dates-section">
    <label>Fechas Cerradas (Feriados/Eventos)</label>
    <div class="closed-dates-form">
      <div class="add-closed-date">
        <input type="date" id="closedDateInput" class="filter-input" placeholder="Seleccionar fecha">
        <input type="text" id="closedReasonInput" class="filter-input" placeholder="Razón (ej: Feriado Nacional)" maxlength="100">
        <button type="button" id="addClosedDateBtn" class="add-btn">+ Agregar</button>
      </div>
    </div>
    <div id="closedDatesList" class="closed-dates-list">
      <div class="loading">Cargando fechas cerradas...</div>
    </div>
  </div>

  <button type="submit" class="save-btn save-btn-full">Guardar Configuración</button>
</form>

<script>
// Day names in Spanish
const dayNames = ['Domingo', 'Lunes', 'Martes', 'Miercoles', 'Jueves', 'Viernes', 'Sabado'];

// Generate time slots helper
function generateTimeSlots(startTime: string, endTime: string, intervalMinutes: number): string[] {
  const slots: string[] = [];
  const [startH, startM] = startTime.split(':').map(Number);
  const [endH, endM] = endTime.split(':').map(Number);

  let current = startH * 60 + startM;
  const end = endH * 60 + endM;

  if (current >= end) {
    alert('La hora de inicio debe ser anterior a la hora de fin');
    return [];
  }

  while (current <= end) {
    const hours = Math.floor(current / 60);
    const minutes = current % 60;
    slots.push(`${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}`);
    current += intervalMinutes;
  }

  return slots;
}

// Render day schedules
function renderDaySchedules(settings: any) {
  const container = document.getElementById('daySchedulesContainer');
  if (!container) return;

  let daySchedules: any = {};

  if (settings.daySchedules) {
    daySchedules = settings.daySchedules;
  } else {
    for (let day = 0; day <= 6; day++) {
      const dayStr = day.toString();
      daySchedules[dayStr] = {
        enabled: settings.openDays.includes(dayStr),
        times: settings.openDays.includes(dayStr) ? settings.openTimes : []
      };
    }
  }

  container.innerHTML = '';

  for (let day = 0; day <= 6; day++) {
    const dayStr = day.toString();
    const schedule = daySchedules[dayStr] || { enabled: false, times: [] };

    const dayPanel = document.createElement('div');
    dayPanel.className = 'day-schedule-panel';
    dayPanel.dataset.day = dayStr;

    const header = document.createElement('div');
    header.className = 'day-schedule-header';
    header.innerHTML = `
      <button type="button" class="day-toggle-btn" data-day="${dayStr}">
        <span class="day-name">${dayNames[day]}</span>
        <span class="toggle-icon">▼</span>
      </button>
      <label class="day-enabled-toggle">
        <input type="checkbox" class="day-enabled-checkbox" data-day="${dayStr}" ${schedule.enabled ? 'checked' : ''}>
        <span class="toggle-track"></span>
        <span class="toggle-label">Activo</span>
      </label>
    `;

    const body = document.createElement('div');
    body.className = 'day-schedule-body' + (schedule.enabled ? ' expanded' : '');
    body.innerHTML = `
      <div class="time-generator">
        <h4>Generador de Horarios:</h4>
        <div class="generator-row">
          <div class="generator-field">
            <label>De:</label>
            <input type="time" class="time-input start-time" data-day="${dayStr}" value="12:00">
          </div>
          <div class="generator-field">
            <label>A:</label>
            <input type="time" class="time-input end-time" data-day="${dayStr}" value="22:00">
          </div>
          <div class="generator-field">
            <label>Intervalo:</label>
            <select class="interval-select" data-day="${dayStr}">
              <option value="30">30 min</option>
              <option value="60">1 hora</option>
              <option value="90">1.5 horas</option>
              <option value="120">2 horas</option>
            </select>
          </div>
          <button type="button" class="generate-btn" data-day="${dayStr}">Generar</button>
        </div>
      </div>
      <div class="time-editor">
        <label>Horarios (uno por línea):</label>
        <textarea class="day-times-textarea" data-day="${dayStr}" rows="6" placeholder="12:00&#10;13:00&#10;14:00">${schedule.times.join('\n')}</textarea>
      </div>
    `;

    dayPanel.appendChild(header);
    dayPanel.appendChild(body);
    container.appendChild(dayPanel);

    const toggleBtn = header.querySelector('.day-toggle-btn');
    toggleBtn?.addEventListener('click', () => toggleDayPanel(dayStr));

    const enabledCheckbox = header.querySelector('.day-enabled-checkbox') as HTMLInputElement;
    enabledCheckbox?.addEventListener('change', (e) => {
      const target = e.target as HTMLInputElement;
      if (target.checked) {
        body.classList.add('expanded');
      } else {
        body.classList.remove('expanded');
      }
    });

    const generateBtn = body.querySelector('.generate-btn');
    generateBtn?.addEventListener('click', () => generateTimesForDay(dayStr));
  }
}

function toggleDayPanel(day: string) {
  const panel = document.querySelector(`.day-schedule-panel[data-day="${day}"]`);
  if (!panel) return;

  const body = panel.querySelector('.day-schedule-body');
  const icon = panel.querySelector('.toggle-icon');

  body?.classList.toggle('expanded');
  if (icon) {
    icon.textContent = body?.classList.contains('expanded') ? '▲' : '▼';
  }
}

function generateTimesForDay(day: string) {
  const startInput = document.querySelector(`.start-time[data-day="${day}"]`) as HTMLInputElement;
  const endInput = document.querySelector(`.end-time[data-day="${day}"]`) as HTMLInputElement;
  const intervalSelect = document.querySelector(`.interval-select[data-day="${day}"]`) as HTMLSelectElement;
  const textarea = document.querySelector(`.day-times-textarea[data-day="${day}"]`) as HTMLTextAreaElement;

  if (!startInput || !endInput || !intervalSelect || !textarea) return;

  const start = startInput.value;
  const end = endInput.value;
  const interval = parseInt(intervalSelect.value);

  if (!start || !end) {
    alert('Por favor ingresa horarios de inicio y fin');
    return;
  }

  const slots = generateTimeSlots(start, end, interval);
  if (slots.length > 0) {
    textarea.value = slots.join('\n');
  }
}

// Load settings
async function loadSettings() {
  try {
    const response = await fetch('/api/settings');
    const data = await response.json();
    const settings = data.settings;

    (document.getElementById('maxSeatsTotal') as HTMLInputElement).value = settings.maxSeatsTotal;
    (document.getElementById('maxSeatsPerReservation') as HTMLInputElement).value = settings.maxSeatsPerReservation;
    (document.getElementById('reservationDuration') as HTMLInputElement).value = settings.reservationDuration;
    (document.getElementById('advanceBookingDays') as HTMLInputElement).value = settings.advanceBookingDays;

    renderDaySchedules(settings);
  } catch (error) {
    console.error('Error loading settings:', error);
  }
}

// Save settings
document.getElementById('settingsForm')?.addEventListener('submit', async (e) => {
  e.preventDefault();

  const form = e.target as HTMLFormElement;
  const formData = new FormData(form);

  const daySchedules: any = {};
  for (let day = 0; day <= 6; day++) {
    const dayStr = day.toString();
    const checkbox = document.querySelector(`.day-enabled-checkbox[data-day="${dayStr}"]`) as HTMLInputElement;
    const textarea = document.querySelector(`.day-times-textarea[data-day="${dayStr}"]`) as HTMLTextAreaElement;

    if (checkbox && textarea) {
      const times = textarea.value
        .split('\n')
        .map(t => t.trim())
        .filter(t => t && /^[0-2]?[0-9]:[0-5][0-9]$/.test(t));

      daySchedules[dayStr] = {
        enabled: checkbox.checked,
        times: times
      };
    }
  }

  const data = {
    maxSeatsTotal: parseInt(formData.get('maxSeatsTotal') as string),
    maxSeatsPerReservation: parseInt(formData.get('maxSeatsPerReservation') as string),
    reservationDuration: parseInt(formData.get('reservationDuration') as string),
    advanceBookingDays: parseInt(formData.get('advanceBookingDays') as string),
    daySchedules,
  };

  try {
    const response = await fetch('/api/settings', {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(data),
    });

    if (response.ok) {
      alert('Configuración guardada exitosamente');
      loadSettings();
    } else {
      alert('Error al guardar configuración');
    }
  } catch (error) {
    console.error('Error saving settings:', error);
    alert('Error al guardar configuración');
  }
});

// Load closed dates
async function loadClosedDates() {
  try {
    const response = await fetch('/api/closed-dates');
    const data = await response.json();

    const list = document.getElementById('closedDatesList');
    if (!list) return;

    if (data.closedDates.length === 0) {
      list.innerHTML = '<div class="no-data">(No hay fechas cerradas)</div>';
      return;
    }

    list.innerHTML = data.closedDates.map((cd: any) => `
      <div class="closed-date-item">
        <span class="closed-date-info">
          <span class="date">${formatClosedDate(cd.date)}</span>
          <span class="separator">-</span>
          <span class="reason">${cd.reason}</span>
        </span>
        <button type="button" class="delete-btn small" data-id="${cd.id}">Eliminar</button>
      </div>
    `).join('');

    list.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const target = e.target as HTMLButtonElement;
        const id = target.dataset.id;
        if (id && confirm('¿Eliminar esta fecha cerrada?')) {
          await deleteClosedDate(id);
        }
      });
    });
  } catch (error) {
    console.error('Error loading closed dates:', error);
  }
}

function formatClosedDate(dateStr: string) {
  const date = new Date(dateStr);
  const year = date.getUTCFullYear();
  const month = String(date.getUTCMonth() + 1).padStart(2, '0');
  const day = String(date.getUTCDate()).padStart(2, '0');
  return `${day}/${month}/${year}`;
}

async function addClosedDate(date: string, reason: string) {
  if (!date || !reason) {
    alert('Por favor completa todos los campos');
    return;
  }

  try {
    const response = await fetch('/api/closed-dates', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ date, reason }),
    });

    if (response.ok) {
      loadClosedDates();
      (document.getElementById('closedDateInput') as HTMLInputElement).value = '';
      (document.getElementById('closedReasonInput') as HTMLInputElement).value = '';
    } else {
      const error = await response.json();
      alert(error.error || 'Error al agregar fecha cerrada');
    }
  } catch (error) {
    console.error('Error adding closed date:', error);
    alert('Error al agregar fecha cerrada');
  }
}

async function deleteClosedDate(id: string) {
  try {
    const response = await fetch(`/api/closed-dates/${id}`, {
      method: 'DELETE',
    });

    if (response.ok) {
      loadClosedDates();
    } else {
      alert('Error al eliminar fecha cerrada');
    }
  } catch (error) {
    console.error('Error deleting closed date:', error);
    alert('Error al eliminar fecha cerrada');
  }
}

document.getElementById('addClosedDateBtn')?.addEventListener('click', () => {
  const dateInput = document.getElementById('closedDateInput') as HTMLInputElement;
  const reasonInput = document.getElementById('closedReasonInput') as HTMLInputElement;

  if (dateInput && reasonInput) {
    addClosedDate(dateInput.value, reasonInput.value);
  }
});

loadSettings();
loadClosedDates();
</script>


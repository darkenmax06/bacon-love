---
import "../layout.css";

const {
  title = "Bacon Love Admin",
  description = "Panel de administración",
  variant = "dashboard", // "dashboard" | "login"
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/a.png" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <body class={`admin-body admin-body--${variant}`}>

    {variant === "dashboard" ? (

      <div class="admin-layout">

        <!-- Sidebar -->
        <aside class="admin-sidebar" id="adminSidebar">

          <div class="sidebar__top">
            <a href="/es/" class="sidebar__logo">
              <img src="/logo.png" alt="Bacon Love" />
            </a>
            <span class="sidebar__badge">Admin</span>
          </div>

          <nav class="sidebar__nav">
            <span class="sidebar__nav-label">Navegacion</span>
            <a
              href="#"
              class="sidebar__nav-item active"
              data-admin-tab="appointments"
            >
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                <line x1="16" y1="2" x2="16" y2="6"/>
                <line x1="8" y1="2" x2="8" y2="6"/>
                <line x1="3" y1="10" x2="21" y2="10"/>
              </svg>
              Reservas
            </a>
            <a
              href="#"
              class="sidebar__nav-item"
              data-admin-tab="settings"
            >
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="3"/>
                <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83-2.83l.06-.06A1.65 1.65 0 0 0 4.68 15a1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 2.83-2.83l.06.06A1.65 1.65 0 0 0 9 4.68a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 2.83l-.06.06A1.65 1.65 0 0 0 19.4 9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"/>
              </svg>
              Configuracion
            </a>
            <a
              href="#"
              class="sidebar__nav-item"
              data-admin-tab="help"
            >
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/>
                <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                <line x1="12" y1="17" x2="12.01" y2="17"/>
              </svg>
              Ayuda
            </a>
          </nav>

          <div class="sidebar__footer">
            <a href="/es/" class="sidebar__site-link">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                <polyline points="9 22 9 12 15 12 15 22"/>
              </svg>
              Ver sitio
            </a>
            <button id="adminLogoutBtn" class="sidebar__logout-btn">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                <polyline points="16 17 21 12 16 7"/>
                <line x1="21" y1="12" x2="9" y2="12"/>
              </svg>
              Cerrar sesion
            </button>
          </div>

        </aside>

        <!-- Mobile topbar -->
        <div class="admin-topbar">
          <div class="topbar__left">
            <button class="topbar__menu-btn" id="topbarMenuBtn" aria-label="Abrir menú">
              <span></span>
              <span></span>
              <span></span>
            </button>
            <a href="/es/" class="topbar__logo">
              <img src="/logo.png" alt="Bacon Love" />
            </a>
            <span class="topbar__badge">Admin</span>
          </div>
          <a href="/es/" class="topbar__site-link">← Sitio</a>
        </div>

        <!-- Overlay for mobile sidebar -->
        <div class="sidebar__overlay" id="sidebarOverlay"></div>

        <!-- Main content -->
        <main class="admin-main">
          <slot />
        </main>

      </div>

    ) : (

      <!-- Login layout: centered, no sidebar -->
      <div class="admin-login-shell">
        <div class="login-shell__header">
          <a href="/es/" class="sidebar__logo login-shell__logo">
            <img src="/logo.png" alt="Bacon Love" />
          </a>
          <a href="/es/" class="login-shell__back">← Volver al sitio</a>
        </div>
        <main class="login-shell__main">
          <slot />
        </main>
      </div>

    )}

  </body>
</html>

<script>
// — Tab switching via sidebar nav items —
const navItems = document.querySelectorAll('[data-admin-tab]');
const tabContents = document.querySelectorAll('.tab-content');

navItems.forEach(item => {
  item.addEventListener('click', (e) => {
    e.preventDefault();
    const tab = (item as HTMLElement).dataset.adminTab;

    navItems.forEach(i => i.classList.remove('active'));
    tabContents.forEach(c => c.classList.remove('active'));

    item.classList.add('active');
    document.getElementById(`${tab}-tab`)?.classList.add('active');

    // Close sidebar on mobile after selection
    document.getElementById('adminSidebar')?.classList.remove('open');
    document.getElementById('sidebarOverlay')?.classList.remove('active');
  });
});

// — Logout —
document.getElementById('adminLogoutBtn')?.addEventListener('click', async () => {
  await fetch('/api/auth/logout', { method: 'POST' });
  window.location.href = '/admin/login';
});

// — Mobile sidebar toggle —
const menuBtn = document.getElementById('topbarMenuBtn');
const sidebar = document.getElementById('adminSidebar');
const overlay = document.getElementById('sidebarOverlay');

menuBtn?.addEventListener('click', () => {
  sidebar?.classList.toggle('open');
  overlay?.classList.toggle('active');
});

overlay?.addEventListener('click', () => {
  sidebar?.classList.remove('open');
  overlay?.classList.remove('active');
});
</script>

<style is:global>

/* ─── Reset for admin body ─────────────────────────── */
.admin-body {
  min-height: 100dvh;
}

/* ─── Dashboard variant: sidebar + main ────────────── */
.admin-layout {
  display: flex;
  min-height: 100dvh;
}

/* Sidebar */
.admin-sidebar {
  width: 240px;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  background: rgba(6, 6, 6, 0.98);
  border-right: 1px solid rgba(243, 238, 238, 0.07);
  position: fixed;
  top: 0;
  left: 0;
  height: 100dvh;
  z-index: 50;
  overflow-y: auto;
}

.sidebar__top {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 10px;
  padding: 28px 24px 20px;
  border-bottom: 1px solid rgba(243, 238, 238, 0.07);
}

.sidebar__logo {
  display: block;
  height: 32px;
}

.sidebar__logo img {
  height: 100%;
  width: auto;
  object-fit: contain;
  filter: invert(1);
}

.sidebar__badge {
  display: inline-block;
  padding: 3px 10px;
  background: rgba(243, 238, 238, 0.08);
  border: 1px solid rgba(243, 238, 238, 0.14);
  border-radius: 99px;
  font-family: "jost", sans-serif;
  font-size: 0.7rem;
  font-weight: 700;
  letter-spacing: 2px;
  text-transform: uppercase;
  color: rgba(243, 238, 238, 0.5);
}

/* Nav */
.sidebar__nav {
  flex: 1;
  padding: 20px 12px;
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.sidebar__nav-label {
  display: block;
  font-family: "jost", sans-serif;
  font-size: 0.65rem;
  font-weight: 700;
  letter-spacing: 2px;
  text-transform: uppercase;
  color: rgba(243, 238, 238, 0.25);
  padding: 0 12px;
  margin-bottom: 8px;
}

.sidebar__nav-item {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 12px;
  border-radius: 8px;
  font-family: "jost", sans-serif;
  font-size: 0.9rem;
  font-weight: 600;
  color: rgba(243, 238, 238, 0.5);
  text-decoration: none;
  transition: background 0.15s, color 0.15s;
  cursor: pointer;
}

.sidebar__nav-item svg {
  fill: none;
  flex-shrink: 0;
  opacity: 0.6;
  transition: opacity 0.15s;
}

.sidebar__nav-item:hover {
  background: rgba(243, 238, 238, 0.05);
  color: rgba(243, 238, 238, 0.85);
}

.sidebar__nav-item:hover svg {
  opacity: 0.85;
}

.sidebar__nav-item.active {
  background: rgba(243, 238, 238, 0.08);
  color: var(--white);
}

.sidebar__nav-item.active svg {
  opacity: 1;
}

/* Footer */
.sidebar__footer {
  padding: 16px 12px;
  border-top: 1px solid rgba(243, 238, 238, 0.07);
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.sidebar__site-link {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 12px;
  border-radius: 8px;
  font-family: "jost", sans-serif;
  font-size: 0.875rem;
  font-weight: 600;
  color: rgba(243, 238, 238, 0.4);
  text-decoration: none;
  transition: background 0.15s, color 0.15s;
}

.sidebar__site-link svg {
  fill: none;
  opacity: 0.5;
}

.sidebar__site-link:hover {
  background: rgba(243, 238, 238, 0.04);
  color: rgba(243, 238, 238, 0.7);
}

.sidebar__logout-btn {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 12px;
  border-radius: 8px;
  background: transparent;
  border: none;
  font-family: "jost", sans-serif;
  font-size: 0.875rem;
  font-weight: 600;
  color: rgba(211, 47, 47, 0.6);
  cursor: pointer;
  text-align: left;
  width: 100%;
  transition: background 0.15s, color 0.15s;
}

.sidebar__logout-btn svg {
  fill: none;
  flex-shrink: 0;
}

.sidebar__logout-btn:hover {
  background: rgba(211, 47, 47, 0.08);
  color: #ff6b6b;
}

/* Mobile topbar (hidden on desktop) */
.admin-topbar {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 56px;
  background: rgba(6, 6, 6, 0.98);
  backdrop-filter: blur(12px);
  border-bottom: 1px solid rgba(243, 238, 238, 0.07);
  z-index: 40;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
}

.topbar__left {
  display: flex;
  align-items: center;
  gap: 12px;
}

.topbar__menu-btn {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  width: 36px;
  height: 36px;
  background: rgba(243, 238, 238, 0.06);
  border: 1px solid rgba(243, 238, 238, 0.1);
  border-radius: 8px;
  padding: 8px 7px;
  cursor: pointer;
  gap: 4px;
}

.topbar__menu-btn span {
  display: block;
  height: 2px;
  background: var(--white);
  border-radius: 2px;
  transition: transform 0.2s, opacity 0.2s;
}

.topbar__logo {
  height: 28px;
  display: block;
}

.topbar__logo img {
  height: 100%;
  width: auto;
  object-fit: contain;
  filter: invert(1);
}

.topbar__badge {
  font-family: "jost", sans-serif;
  font-size: 0.65rem;
  font-weight: 700;
  letter-spacing: 2px;
  text-transform: uppercase;
  color: rgba(243, 238, 238, 0.35);
  padding: 2px 8px;
  border: 1px solid rgba(243, 238, 238, 0.1);
  border-radius: 99px;
}

.topbar__site-link {
  font-family: "jost", sans-serif;
  font-size: 0.8rem;
  font-weight: 600;
  color: rgba(243, 238, 238, 0.4);
  text-decoration: none;
}

/* Overlay */
.sidebar__overlay {
  display: none;
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 45;
  backdrop-filter: blur(2px);
}

.sidebar__overlay.active {
  display: block;
}

/* Main content area */
.admin-main {
  flex: 1;
  margin-left: 240px;
  min-height: 100dvh;
  padding: 40px 32px;
}

/* — Responsive — */
@media (max-width: 900px) {
  .admin-sidebar {
    transform: translateX(-100%);
    transition: transform 0.28s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .admin-sidebar.open {
    transform: translateX(0);
  }

  .admin-topbar {
    display: flex;
  }

  .admin-main {
    margin-left: 0;
    padding: 24px 16px;
    padding-top: calc(56px + 24px);
  }
}

/* ─── Login variant ──────────────────────────────── */
.admin-login-shell {
  min-height: 100dvh;
  display: flex;
  flex-direction: column;
}

.login-shell__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 32px;
  border-bottom: 1px solid rgba(243, 238, 238, 0.07);
  background: rgba(6, 6, 6, 0.7);
  backdrop-filter: blur(12px);
  position: sticky;
  top: 0;
  z-index: 10;
}

.login-shell__logo {
  display: block;
  height: 30px;
}

.login-shell__logo img {
  height: 100%;
  width: auto;
  object-fit: contain;
  filter: invert(1);
}

.login-shell__back {
  font-family: "jost", sans-serif;
  font-size: 0.875rem;
  font-weight: 600;
  color: rgba(243, 238, 238, 0.4);
  text-decoration: none;
  transition: color 0.15s;
}

.login-shell__back:hover {
  color: rgba(243, 238, 238, 0.8);
}

.login-shell__main {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48px 16px;
}
</style>

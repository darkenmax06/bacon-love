---
const { label, title, subtitle, description, button } = Astro.props;

const ORDERS_URL = "https://pedidos.delitbee.shop/bacon-love";
---

<section class="orders" id="orders">
  <div class="orders__container">

    <div class="orders__content">
      <span class="orders__label">{label}</span>
      <h2 class="orders__title">{title}</h2>
      <p class="orders__subtitle">{subtitle}</p>
      <p class="orders__description">{description}</p>

      <div class="orders__features">
        <div class="orders__feature">
          <span class="feature__icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
          </span>
          <span>Entrega rapida</span>
        </div>
        <div class="orders__feature">
          <span class="feature__icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </span>
          <span>Calidad artesanal</span>
        </div>
        <div class="orders__feature">
          <span class="feature__icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
          </span>
          <span>Recoge o delivery</span>
        </div>
      </div>

      <a
        href={ORDERS_URL}
        target="_blank"
        rel="noopener noreferrer"
        class="orders__btn"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
          <line x1="3" y1="6" x2="21" y2="6"/>
          <path d="M16 10a4 4 0 0 1-8 0"/>
        </svg>
        {button}
      </a>
    </div>

    <div class="orders__visual" aria-hidden="true">
      <div class="orders__card">
        <div class="orders__card-header">
          <span class="card__dot"></span>
          <span class="card__dot"></span>
          <span class="card__dot"></span>
        </div>
        <p class="card__brand">BACON LOVE</p>
        <div class="card__items">
          <div class="card__item">
            <span class="item__name">Bacon Burger</span>
            <span class="item__price">14.90€</span>
          </div>
          <div class="card__item">
            <span class="item__name">Smash Burger</span>
            <span class="item__price">12.50€</span>
          </div>
          <div class="card__item card__item--highlight">
            <span class="item__name">Pulled Pork</span>
            <span class="item__price">15.90€</span>
          </div>
        </div>
        <div class="card__total">
          <span>Total</span>
          <span class="card__total-amount">43.30€</span>
        </div>
        <div class="card__cta">Confirmar pedido →</div>
      </div>
      <div class="orders__glow"></div>
    </div>

  </div>
</section>

<style>
.orders {
  width: 100%;
  padding: 96px 24px;
  position: relative;
  overflow: hidden;
}

.orders::before {
  content: '';
  position: absolute;
  inset: 0;
  background:
    radial-gradient(ellipse 60% 40% at 80% 50%, rgba(243, 238, 238, 0.025) 0%, transparent 70%);
  pointer-events: none;
}

.orders__container {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 80px;
  align-items: center;
}

/* — Content — */
.orders__content {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.orders__label {
  font-family: "jost", sans-serif;
  font-size: 0.7rem;
  font-weight: 700;
  letter-spacing: 3px;
  text-transform: uppercase;
  color: rgba(243, 238, 238, 0.45);
  display: block;
}

.orders__title {
  font-family: "stella", serif;
  font-size: clamp(2.8rem, 5vw, 4rem);
  color: var(--white);
  line-height: 1.05;
  margin: 0;
}

.orders__subtitle {
  font-family: "stella", serif;
  font-size: clamp(1.1rem, 2vw, 1.4rem);
  color: rgba(243, 238, 238, 0.55);
  margin: 0;
}

.orders__description {
  font-family: "jost", sans-serif;
  font-size: 1rem;
  color: rgba(243, 238, 238, 0.65);
  line-height: 1.75;
  margin: 0;
  max-width: 480px;
}

.orders__features {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  margin-top: 4px;
}

.orders__feature {
  display: flex;
  align-items: center;
  gap: 8px;
  font-family: "jost", sans-serif;
  font-size: 0.875rem;
  font-weight: 500;
  color: rgba(243, 238, 238, 0.6);
}

.feature__icon {
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(243, 238, 238, 0.4);
}

.orders__btn {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 16px 32px;
  background-color: var(--white);
  color: var(--black);
  border-radius: 8px;
  font-family: "jost", sans-serif;
  font-weight: 700;
  font-size: 1rem;
  text-decoration: none;
  margin-top: 8px;
  align-self: flex-start;
  transition: transform 0.25s, opacity 0.25s, box-shadow 0.25s;
  box-shadow: 0 4px 24px rgba(243, 238, 238, 0.08);
}

.orders__btn:hover {
  transform: translateY(-3px);
  opacity: 0.92;
  box-shadow: 0 8px 32px rgba(243, 238, 238, 0.15);
}

/* — Visual / Mock Card — */
.orders__visual {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.orders__glow {
  position: absolute;
  width: 300px;
  height: 300px;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(243, 238, 238, 0.04) 0%, transparent 70%);
  pointer-events: none;
}

.orders__card {
  width: 100%;
  max-width: 320px;
  background: linear-gradient(145deg, rgba(18, 18, 18, 0.98) 0%, rgba(8, 8, 8, 1) 100%);
  border: 1px solid rgba(243, 238, 238, 0.12);
  border-radius: 16px;
  padding: 24px;
  box-shadow: 0 24px 64px rgba(0, 0, 0, 0.6), 0 0 0 1px rgba(243, 238, 238, 0.04);
  position: relative;
  z-index: 1;
}

.orders__card-header {
  display: flex;
  gap: 6px;
  margin-bottom: 20px;
}

.card__dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: rgba(243, 238, 238, 0.12);
}

.card__brand {
  font-family: "stella", serif;
  font-size: 1.35rem;
  color: var(--white);
  letter-spacing: 2px;
  margin: 0 0 20px 0;
}

.card__items {
  display: flex;
  flex-direction: column;
  gap: 2px;
  margin-bottom: 16px;
}

.card__item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 12px;
  border-radius: 8px;
  transition: background 0.2s;
}

.card__item:hover {
  background: rgba(243, 238, 238, 0.04);
}

.card__item--highlight {
  background: rgba(243, 238, 238, 0.06);
  border: 1px solid rgba(243, 238, 238, 0.1);
}

.item__name {
  font-family: "jost", sans-serif;
  font-size: 0.9rem;
  color: rgba(243, 238, 238, 0.8);
}

.item__price {
  font-family: "jost", sans-serif;
  font-size: 0.9rem;
  font-weight: 700;
  color: var(--white);
}

.card__total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 12px 0 12px;
  border-top: 1px solid rgba(243, 238, 238, 0.1);
  margin-bottom: 16px;
  font-family: "jost", sans-serif;
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: rgba(243, 238, 238, 0.45);
}

.card__total-amount {
  font-size: 1.1rem;
  font-weight: 700;
  color: var(--white);
  text-transform: none;
  letter-spacing: 0;
}

.card__cta {
  text-align: center;
  padding: 12px;
  background: var(--white);
  color: var(--black);
  border-radius: 8px;
  font-family: "jost", sans-serif;
  font-weight: 700;
  font-size: 0.9rem;
  cursor: default;
}

/* — Responsive — */
@media (max-width: 900px) {
  .orders__container {
    grid-template-columns: 1fr;
    gap: 48px;
    text-align: center;
  }

  .orders__content {
    align-items: center;
  }

  .orders__description {
    max-width: 560px;
    text-align: center;
  }

  .orders__features {
    justify-content: center;
  }

  .orders__btn {
    align-self: center;
  }

  .orders__visual {
    order: -1;
  }
}

@media (max-width: 480px) {
  .orders {
    padding: 64px 16px;
  }

  .orders__card {
    max-width: 280px;
  }
}
</style>

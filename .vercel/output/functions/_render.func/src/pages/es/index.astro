---
import Layout from "../../components/Layout.astro"
import Hero from "../../components/Hero.astro"
import Orders from "../../components/Orders.astro"

import es from "../../translations/es"

const content = es
const languajes = ["es", "en"]

const links = {
  home: "/es",
  about: "/es/nosotros",
  menu: "/es/carta",
  testimonials: "/es/nosotros#testimonials",
  appointments: "/es/citas",
  contact: "/es/contacto"
}

// Assuming alternateLinks needs to be defined for the Layout component.
// The instruction did not provide its definition, so a placeholder is used.
// Please define `alternateLinks` as needed, e.g.,
